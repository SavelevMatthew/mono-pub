{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mono-pub/ts-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist/dts",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}