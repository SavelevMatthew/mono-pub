{
  "name": "mono-pub",
  "version": "0.0.0-development",
  "description": "Simple tool for publishing your npm packages that live in a monorepo",
  "keywords": [
    "automation",
    "publish",
    "release",
    "mono-pub",
    "node",
    "semver",
    "monorepo",
    "typescript",
    "cicd"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:SavelevMatthew/mono-pub.git",
    "directory": "packages/mono-pub"
  },
  "author": {
    "name": "Matthew Savelev",
    "email": "savelevmatthew@gmail.com",
    "url": "https://github.com/SavelevMatthew"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src && prettier --check src"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "./utils": [
        "./dist/utils.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.mjs"
    }
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@mono-pub/configs": "workspace:^",
    "@types/lodash": "^4.14.194",
    "@types/signale": "^1.4.4",
    "eslint": "^9.16.0",
    "tmp": "^0.2.1",
    "tslib": "^2.5.0",
    "tsup": "^8.3.5",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "glob": "^10.2.2",
    "lodash": "^4.17.21",
    "signale": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
